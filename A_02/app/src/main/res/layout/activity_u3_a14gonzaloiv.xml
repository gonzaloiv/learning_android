<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/button_varios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/button1_content" />

        <Button
            android:id="@+id/button_datos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/button2_content" />

        <!--TextViews ocultos onde gardar os datos entre estados-->
        <TextView
            android:id="@+id/text_termo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            />

        <TextView
            android:id="@+id/text_numero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            />

    </LinearLayout>

</RelativeLayout>
